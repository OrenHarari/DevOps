pipeline {
    agent any
    
    environment {
        DOCKERHUB_CREDENTIALS = credentials('docker-hub-credentials')
        DOCKER_IMAGE_NAME = "orenharari33/jenkins_push_image"
        DOCKER_IMAGE_TAG = "${BUILD_NUMBER}"
    }
    
    stages {
        stage('Checkout') {
            steps {
                script {
                    echo "Starting Checkout stage"
                    checkout scm
                    echo "Checkout stage completed successfully"
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    echo "Starting Build Docker Image stage"
                    dir('homework-3') {
                        sh "docker build -t ${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_TAG} ."
                    }
                    echo "Build Docker Image stage completed successfully"
                }
            }
        }
        
        stage('Login to DockerHub') {
            steps {
                script {
                    echo "Starting Login to DockerHub stage"
                    sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
                    echo "Login to DockerHub stage completed successfully"
                }
            }
        }
        
        stage('Push Docker Image') {
            steps {
                script {
                    echo "Starting Push Docker Image stage"
                    sh "docker push ${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_TAG}"
                    echo "Push Docker Image stage completed successfully"
                }
            }
        }
    }
    
    post {
        always {
            script {
                echo "Starting post-build actions"
                sh 'docker logout'
                echo "Docker logout completed"
            }
        }
        success {
            echo "Pipeline completed successfully"
        }
        failure {
            echo "Pipeline failed"
        }
    }
}
