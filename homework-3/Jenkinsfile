pipeline {
    agent any
    
    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub_login')
        DOCKER_IMAGE_NAME = "orenharari33/jenkins_push_image"
        DOCKER_IMAGE_TAG = "${BUILD_NUMBER}"
    }
    
    stages {
        stage('Environment Info') {
            steps {
                script {
                    println "Printing environment information"
                    sh 'env'
                    sh 'which docker || echo "Docker not found in PATH"'
                    sh 'id'
                    sh 'groups'
                    sh 'docker version || echo "Docker not accessible"'
                }
            }
        }
        
        stage('Build') {
            steps {
                script {
                    println "Starting Build stage"
                    dir('homework-3'){
                        sh "ls -l"
                        sh "pwd"
                        sh 'docker build -t ${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_TAG} . || (echo "Failed to build Docker image" && exit 1)'
                    }
                    println "Build stage completed"
                }
            }
        }
        
        stage('Login to DockerHub') {
            steps {
                script {
                    println "Starting Login to DockerHub stage"
                    sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin || (echo "Failed to login to DockerHub" && exit 1)'
                    println "Login to DockerHub stage completed"
                }
            }
        }
        
        stage('Push to DockerHub') {
            steps {
                script {
                    println "Starting Push to DockerHub stage"
                    sh 'docker push ${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_TAG} || (echo "Failed to push Docker image" && exit 1)'
                    println "Push to DockerHub stage completed"
                }
            }
        }
    }
    
    post {
        always {
            sh 'docker logout || echo "Failed to logout from DockerHub"'
        }
    }
}
