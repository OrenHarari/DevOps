pipeline {
    agent any
    
    environment {
        DOCKERHUB_CREDENTIALS = credentials('docker-hub-credentials')
        DOCKER_IMAGE_NAME = "orenharari33/jenkins_push_image"
        DOCKER_IMAGE_TAG = "${BUILD_NUMBER}"
    }
    
    stages {
        stage('Build') {
            steps {
                script {
                    println "Starting Build stage"
                    sh 'docker build -t ${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_TAG} .'
                    println "Build stage completed"
                }
            }
        }
        
        stage('Login to DockerHub') {
            steps {
                script {
                    println "Starting Login to DockerHub stage"
                    sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
                    println "Login to DockerHub stage completed"
                }
            }
        }
        
        stage('Push to DockerHub') {
            steps {
                script {
                    println "Starting Push to DockerHub stage"
                    sh 'docker push ${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_TAG}'
                    println "Push to DockerHub stage completed"
                }
            }
        }
    }
    
    post {
        always {
            script {
                println "Starting post-build actions"
                sh 'docker logout'
                println "Post-build actions completed"
            }
        }
        success {
            println "Pipeline executed successfully"
        }
        failure {
            println "Pipeline execution failed"
        }
    }
}
